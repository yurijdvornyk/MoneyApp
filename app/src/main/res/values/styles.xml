<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtitleTextStyle">
        <item name="android:textSize">@dimen/text_subtitle</item>
    </style>

    <style name="BalanceTextStyle">
        <item name="android:textSize">@dimen/text_balance</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemTitleTextStyle">
        <item name="android:textSize">@dimen/text_item_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/space_single</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="SettingsKeyTextStyle">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">@dimen/settings_text_key</item>
    </style>

    <style name="SettingsValueTextStyle">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">@dimen/settings_text_value</item>
    </style>
</resources>
